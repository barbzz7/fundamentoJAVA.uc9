public class missaoForger {
    public static void main(String[] args) {
     Scanner entrada = new Scanner(System.in);
         System.out.println("digite sua missão:(1 a 4)");
         int missao = entrada.nextInt();
          
         switch (missao){
            case 1:
                System.out.println("Proteger a anya");
             break;
                case 2:
                System.out.println("Investigar o Desmond");
                  break;
                case 3: 
                    System.out.println("Missão desconhecida");
                    break;
                  case 4: 
                      System.out.println("Visitar o castelo para recreaçao");
                      break;
                  default:
                      System.out.println("Missão ultra secreta");
        }
         entrada.close();     
}}
